{
  "parser": "babel-eslint",
  "extends": "airbnb-base",
  "plugins": [
    "mocha"
  ],
  "globals": {
    "__DEV__": true,
    "db": true
  },
  "env": {
    "es6": true,
    "node": true
  },
  "rules": {
    "no-confusing-arrow": 0,
    "max-len": "off",
    "semi": [2, "never"],
    "global-require": 0,
    "indent": ["error", 2],
    "no-tabs": ["off"],
    "import/prefer-default-export": ["off"],
    "object-curly-newline": ["off"],
    "mocha/no-exclusive-tests": "error"
  }
}