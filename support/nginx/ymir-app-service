  # ymir-app-service server
  location /api {
#    if ($scheme = http) {
#      return 301 https://$http_host$request_uri;
#    }

#    error_page 497 =301 https://$http_host$request_uri;

    access_log  off;
    # access_log  /var/log/nginx/ymir_app_service_access.log;
    error_log   /var/log/nginx/ymir_app_service_error.log;

    proxy_redirect     off;
    proxy_buffering    off;

    proxy_set_header   X-Forwarded-Proto $scheme;
    proxy_set_header   Host              $http_host;
    proxy_set_header   X-Real-IP         $remote_addr;

    proxy_pass http://ymir_app_service;
  }

  location /docs {
    access_log  off;
    error_log   off;

    proxy_redirect     off;
    proxy_buffering    off;

    proxy_set_header   X-Forwarded-Proto $scheme;
    proxy_set_header   Host              $http_host;
    proxy_set_header   X-Real-IP         $remote_addr;

    proxy_pass http://ymir_app_service;
  }

  location /events {
    access_log  off;
    # access_log  /var/log/nginx/ymir_web_service_access.log;
    error_log   /var/log/nginx/ymir_web_service_error.log;

    proxy_redirect     off;
    proxy_buffering    off;

    proxy_set_header   X-Forwarded-Proto $scheme;
    proxy_set_header   Host              $http_host;
    proxy_set_header   X-Real-IP         $remote_addr;

    proxy_pass http://ymir_web_service;
  }

  location /static {
    access_log  off;
    # access_log  /var/log/nginx/ymir_web_service_access.log;
    error_log   /var/log/nginx/ymir_web_service_error.log;

    proxy_redirect     off;
    proxy_buffering    off;

    proxy_set_header   X-Forwarded-Proto $scheme;
    proxy_set_header   Host              $http_host;
    proxy_set_header   X-Real-IP         $remote_addr;

    proxy_pass http://ymir_web_service;
  }

